<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script type="text/javascript">
      var authorizationToken = "<%= authorizationToken %>";

      function checkIfEmailIsValid(){
        (function(){

          console.log(authorizationToken);

          $.post("/github/peer", {
              axaEmail: "<%= axaEmail %>",
              githubProfil: "<%= githubProfil %>",
              team: "<%= team %>",
              authorizationToken: "<%= authorizationToken %>"
          }, function(data, status){
              console.log(data);
          }, "json");

          setTimeout(arguments.callee, 10000);
        })();
      }
    </script>
  </head>
  <body onload="checkIfEmailIsValid();">
    <h1>Waiting for validation.</h1>
    <br/>
    <br/>
    <br/>
    <h3>Please check your axa emails and validate the peering</h3>
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <img src="http://myteachsource.ascd.org/images/loading.gif" />
        </div>
      </div>

    </div>

  </body>

</html>
